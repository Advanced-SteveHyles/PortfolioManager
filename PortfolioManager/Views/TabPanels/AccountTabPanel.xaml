<UserControl x:Class="PortfolioManager.Views.TabPanels.AccountTabPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PortfolioManager.Views.TabPanels"
             xmlns:views="clr-namespace:PortfolioManager.Views"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <StackPanel>
        <Expander IsExpanded="True" Header ="Account">
            <views:AccountDetailsView DataContext="{Binding AccountDetailsVm}"></views:AccountDetailsView>
        </Expander>

        <Expander Header ="Account Transactions">
            <views:AccountTransactionSummary></views:AccountTransactionSummary>
        </Expander>
        
        <Expander Header="Investments">
            <views:AccountInvestmentDetails DataContext="{Binding AccountInvestmentDetailsVm}"></views:AccountInvestmentDetails>
        </Expander>
    </StackPanel>
</UserControl>
