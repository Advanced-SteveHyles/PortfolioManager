                            <Grid.RowDefinitions>
                                <RowDefinition />
                                <RowDefinition />
                                <RowDefinition />
                                <RowDefinition />
                            </Grid.RowDefinitions>
                            <Expander Grid.Row="1" Header="Summary"  ExpandDirection="Right">
                                <DatePicker></DatePicker>
                            </Expander>
                            <Expander Grid.Row="2"  Header="Transactions"  ExpandDirection="Right">
                                <StackPanel>
                                    <Button>A</Button>
                                    <Button>C</Button>
                                    <DataGrid></DataGrid>
                                    <Button>C</Button>
                                </StackPanel>
                            </Expander>
                            <Expander Grid.Row="3"  Header="Investments" ExpandDirection="Right"></Expander>
